{
    "name": "ecodev/artisans",
    "description": "Les artisans de la transition",
    "type": "project",
    "homepage": "https://artisansdelatransition.org",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "check": [
            "php-cs-fixer fix --ansi --dry-run --diff",
            "phpstan analyse --ansi",
            "@test"
        ],
        "fix": [
            "php-cs-fixer fix --ansi"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "serve": "php -S 0.0.0.0:8080 -t htdocs/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "server/Application/"
        },
        "files": [
            "server/Debug.php",
            "server/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "tests/ApplicationTest/"
        }
    },
    "extra": {
        "zf": {
            "component-whitelist": [
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "laminas/laminas-httphandlerrunner",
                "mezzio/mezzio-fastroute"
            ]
        }
    },
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "beberlei/doctrineextensions": "^1.2",
        "cakephp/chronos": "^1.2",
        "doctrine/migrations": "^2.0",
        "ecodev/graphql-doctrine": "^6.1",
        "ecodev/graphql-upload": "^4.0",
        "imagine/imagine": "^1.2",
        "laminas/laminas-component-installer": "^2.1",
        "laminas/laminas-config-aggregator": "^1.1",
        "laminas/laminas-diactoros": "^2.1",
        "laminas/laminas-http": "^2.10",
        "laminas/laminas-log": "^2.10",
        "laminas/laminas-mail": "^2.10",
        "laminas/laminas-permissions-acl": "^2.7",
        "laminas/laminas-servicemanager": "^3.4",
        "laminas/laminas-stdlib": "^3.2",
        "laminas/laminas-view": "^2.11",
        "mezzio/mezzio": "^3.2",
        "mezzio/mezzio-fastroute": "^3.0",
        "mezzio/mezzio-helpers": "^5.3",
        "mezzio/mezzio-laminasviewrenderer": "^2.0",
        "mezzio/mezzio-session": "^1.2",
        "mezzio/mezzio-session-ext": "^1.8",
        "moneyphp/money": "^3.2",
        "roave/psr-container-doctrine": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "laminas/laminas-development-mode": "^3.2",
        "mezzio/mezzio-tooling": "^1.2",
        "phpstan/phpstan-doctrine": "^0.12.7",
        "phpunit/phpunit": "^9.1"
    }
}
