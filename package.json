{
    "name": "artisans",
    "private": true,
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "postinstall": "playwright install chromium",
        "prerequisite": "mkdir -p htdocs/ && cp -v server/index.php htdocs/ && yarn codegen",
        "dev": "yarn prerequisite && ng serve",
        "prod": "yarn prerequisite && ng build && ng run artisans:server:production && find data/tmp/build -type f -not -name '*.gz' -exec gzip --keep --best {} \\; && rm -rf htdocs/ && mv -v data/tmp/build htdocs",
        "test": "yarn prerequisite && ng test",
        "lint": "ng lint",
        "codegen": "./bin/dump-schema && apollo client:codegen -c apollo.config.js --passthroughCustomScalars --customScalarsPrefix=App --outputFlat --target typescript client/app/shared/generated-types.ts",
        "dev-ssr": "ng run artisans:serve-ssr",
        "serve-ssr": "node data/tmp/server/main.js",
        "prerender": "ng run artisans:prerender"
    },
    "dependencies": {
        "@angular/animations": "~12.2.9",
        "@angular/cdk": "~12.2.9",
        "@angular/common": "~12.2.9",
        "@angular/compiler": "~12.2.9",
        "@angular/core": "~12.2.9",
        "@angular/flex-layout": "^12.0.0-beta.35",
        "@angular/forms": "~12.2.9",
        "@angular/localize": "^12.2.9",
        "@angular/material": "^12.2.9",
        "@angular/platform-browser": "~12.2.9",
        "@angular/platform-browser-dynamic": "~12.2.9",
        "@angular/platform-server": "^12.2.9",
        "@angular/router": "~12.2.9",
        "@apollo/client": "^3.4.16",
        "@ecodev/fab-speed-dial": "^9.0.0",
        "@ecodev/natural": "^41.2.0",
        "@ecodev/natural-editor": "^41.2.0",
        "@graphql-tools/mock": "^8.4.0",
        "@nguniversal/express-engine": "^12.1.1",
        "apollo": "^2.33.6",
        "apollo-angular": "^2.6.0",
        "apollo-upload-client": "^16.0.0",
        "big.js": "^6.1.1",
        "crypto-es": "^1.2.7",
        "express": "^4.17.1",
        "graphql": "^15.6.1",
        "lodash-es": "^4.17.21",
        "lodash.template": "^4.5.0",
        "ngx-progressbar": "^6.1.1",
        "rxjs": "~7.4.0",
        "striptags": "^3.2.0",
        "tslib": "^2.3.1",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~12.2.9",
        "@angular/cli": "~12.2.9",
        "@angular/compiler-cli": "~12.2.9",
        "@nguniversal/builders": "^12.1.1",
        "@playwright/test": "^1.15.2",
        "@types/apollo-upload-client": "^14.1.0",
        "@types/big.js": "^6.1.2",
        "@types/express": "^4.17.13",
        "@types/jasmine": "~3.9.1",
        "@types/jasminewd2": "~2.0.10",
        "@types/lodash-es": "^4.17.5",
        "@types/node": "^14.14.31",
        "codelyzer": "^6.0.2",
        "jasmine-core": "~4.0.1",
        "jasmine-spec-reporter": "~7.0.0",
        "karma": "~6.3.4",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.7.0",
        "prettier": "2.4.1",
        "ts-node": "~10.2.1",
        "tslint": "~6.1.0",
        "typescript": "~4.3.5"
    }
}
