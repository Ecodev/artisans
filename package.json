{
    "name": "artisans",
    "private": true,
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "postinstall": "playwright install chromium",
        "client-config": "`which php8.1 || which php` ./bin/generate-client-configuration.php",
        "prerequisite": "mkdir -p htdocs/ && cp -v server/index.php htdocs/ && yarn client-config && yarn codegen",
        "dev": "yarn prerequisite && ng serve",
        "prod": "yarn prerequisite && ng build && ng run artisans:server:production && find data/tmp/build -type f -not -name '*.gz' -exec gzip --keep --best {} \\; && rm -rf htdocs/ && mv -v data/tmp/build htdocs",
        "test": "yarn prerequisite && ng test",
        "lint": "ng lint",
        "codegen": "./bin/dump-schema && apollo client:codegen --suppressDeprecationWarning -c apollo.config.js --passthroughCustomScalars --customScalarsPrefix=App --outputFlat --target typescript client/app/shared/generated-types.ts",
        "dev-ssr": "ng run artisans:serve-ssr",
        "serve-ssr": "node data/tmp/server/main.js",
        "prerender": "ng run artisans:prerender"
    },
    "dependencies": {
        "@angular/animations": "^14.1.1",
        "@angular/cdk": "^14.1.1",
        "@angular/common": "^14.1.1",
        "@angular/compiler": "^14.1.1",
        "@angular/core": "^14.1.1",
        "@angular/flex-layout": "^14.0.0-beta.40",
        "@angular/forms": "^14.1.1",
        "@angular/localize": "^14.1.1",
        "@angular/material": "^14.1.1",
        "@angular/platform-browser": "^14.1.1",
        "@angular/platform-browser-dynamic": "^14.1.1",
        "@angular/platform-server": "^14.1.1",
        "@angular/router": "^14.1.1",
        "@apollo/client": "^3.6.9",
        "@ecodev/fab-speed-dial": "^11.0.0",
        "@ecodev/natural": "^45.4.2",
        "@ecodev/natural-editor": "^45.4.2",
        "@graphql-tools/mock": "^8.7.1",
        "@nguniversal/express-engine": "^14.0.3",
        "apollo": "^2.34.0",
        "apollo-angular": "^3.0.1",
        "apollo-upload-client": "^17.0.0",
        "big.js": "^6.2.1",
        "crypto-es": "^1.2.7",
        "express": "^4.18.1",
        "graphql": "^15.8.0",
        "lodash-es": "^4.17.21",
        "lodash.template": "^4.5.0",
        "ngx-progressbar": "^9.0.0",
        "rxjs": "~7.5.6",
        "striptags": "^3.2.0",
        "tslib": "^2.4.0",
        "zone.js": "~0.11.7"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^14.1.1",
        "@angular-eslint/builder": "14.0.2",
        "@angular-eslint/eslint-plugin": "14.0.2",
        "@angular-eslint/eslint-plugin-template": "14.0.2",
        "@angular-eslint/schematics": "14.0.2",
        "@angular-eslint/template-parser": "14.0.2",
        "@angular/cli": "^14.1.1",
        "@angular/compiler-cli": "^14.1.1",
        "@nguniversal/builders": "^14.0.3",
        "@playwright/test": "^1.24.2",
        "@types/apollo-upload-client": "^17.0.1",
        "@types/big.js": "^6.1.5",
        "@types/express": "^4.17.13",
        "@types/jasmine": "~4.0.3",
        "@types/jasminewd2": "~2.0.10",
        "@types/lodash-es": "^4.17.5",
        "@types/node": "^16.0",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "eslint": "^8.18.0",
        "jasmine-core": "~4.3.0",
        "jasmine-spec-reporter": "~7.0.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.1",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "^2.0.0",
        "prettier": "2.7.1",
        "ts-node": "~10.9.1",
        "typescript": "~4.7.4"
    }
}
