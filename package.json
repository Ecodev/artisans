{
    "name": "artisans",
    "private": true,
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "postinstall": "playwright install chromium",
        "client-config": "`which php8.2 || which php` ./bin/generate-client-configuration.php",
        "prerequisite": "mkdir -p htdocs/ && cp -v server/index.php htdocs/ && yarn client-config && yarn codegen",
        "dev": "yarn prerequisite && ng serve",
        "prod": "yarn prerequisite && ng build && find data/tmp/build/browser -type f -not -name '*.gz' -exec gzip --keep --best {} \\; && rm -rf htdocs/ && mv -v data/tmp/build/browser htdocs",
        "test": "yarn prerequisite && ng test",
        "lint": "ng lint --max-warnings 0",
        "e2e": "playwright test",
        "codegen": "./bin/dump-schema && graphql-codegen --config codegen.ts"
    },
    "dependencies": {
        "@angular/cdk": "^20.2.10",
        "@angular/common": "^20.3.7",
        "@angular/compiler": "^20.3.7",
        "@angular/core": "^20.3.7",
        "@angular/forms": "^20.3.7",
        "@angular/localize": "^20.3.7",
        "@angular/material": "^20.2.10",
        "@angular/platform-browser": "^20.3.7",
        "@angular/router": "^20.3.7",
        "@apollo/client": "^3.13.7",
        "@ecodev/fab-speed-dial": "^20.0.0",
        "@ecodev/natural": "^65.0.0",
        "@ecodev/natural-editor": "^65.0.0",
        "@ecodev/natural-layout": "^2.0.2",
        "@graphql-codegen/cli": "^6.0.0",
        "@graphql-codegen/typescript-apollo-angular": "^4.0.1",
        "@graphql-codegen/typescript-operations": "^5.0.0",
        "@graphql-tools/mock": "^9.0.25",
        "apollo-angular": "^11.0.0",
        "big.js": "^7.0.1",
        "es-toolkit": "^1.39.10",
        "graphql": "^16.11.0",
        "ngx-progressbar": "^14.0.0",
        "rxjs": "~7.8.2",
        "striptags": "^4.0.0-alpha.4",
        "tslib": "^2.8.1",
        "type-fest": "^4.41.0",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular/build": "^20.3.7",
        "@angular/cli": "^20.3.7",
        "@angular/compiler-cli": "^20.3.7",
        "@playwright/test": "^1.55.0",
        "@types/big.js": "^6.2.2",
        "@types/jasmine": "~5.1.9",
        "@types/node": "^22.14.1",
        "angular-eslint": "^20.2.0",
        "eslint": "^9.24.0",
        "jasmine-core": "~5.10.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "postcss": "^8.5.6",
        "prettier": "3.6.2",
        "prettier-plugin-css-order": "^2.1.2",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.29.1"
    }
}
