{
    "name": "artisans",
    "private": true,
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "postinstall": "playwright install chromium",
        "client-config": "`which php8.2 || which php` ./bin/generate-client-configuration.php",
        "prerequisite": "mkdir -p htdocs/ && cp -v server/index.php htdocs/ && yarn client-config && yarn codegen",
        "dev": "yarn prerequisite && ng serve",
        "prod": "yarn prerequisite && ng build && find data/tmp/build -type f -not -name '*.gz' -exec gzip --keep --best {} \\; && rm -rf htdocs/ && mv -v data/tmp/build htdocs",
        "test": "yarn prerequisite && ng test",
        "lint": "ng lint --max-warnings 0",
        "e2e": "playwright test",
        "codegen": "./bin/dump-schema && graphql-codegen --config codegen.ts"
    },
    "dependencies": {
        "@angular/animations": "^16.1.8",
        "@angular/cdk": "^16.1.7",
        "@angular/common": "^16.1.8",
        "@angular/compiler": "^16.1.8",
        "@angular/core": "^16.1.8",
        "@angular/forms": "^16.1.8",
        "@angular/localize": "^16.1.8",
        "@angular/material": "^16.1.7",
        "@angular/platform-browser": "^16.1.8",
        "@angular/platform-browser-dynamic": "^16.1.8",
        "@angular/router": "^16.1.8",
        "@apollo/client": "~3.7.17",
        "@ecodev/fab-speed-dial": "^15.0.0",
        "@ecodev/natural": "^55.8.2",
        "@ecodev/natural-editor": "^55.8.2",
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/typescript-apollo-angular": "^3.5.6",
        "@graphql-codegen/typescript-operations": "^4.0.1",
        "@graphql-tools/mock": "^9.0.0",
        "@ngbracket/ngx-layout": "^16.0.0",
        "apollo-angular": "^5.0.0",
        "big.js": "^6.2.1",
        "crypto-es": "^2.0.4",
        "graphql": "^16.7.1",
        "lodash-es": "^4.17.21",
        "lodash.template": "^4.5.0",
        "ngx-progressbar": "^11.0.0",
        "rxjs": "~7.8.1",
        "striptags": "^3.2.0",
        "tslib": "^2.6.1",
        "zone.js": "~0.13.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^16.1.8",
        "@angular-eslint/builder": "16.1.0",
        "@angular-eslint/eslint-plugin": "16.1.0",
        "@angular-eslint/eslint-plugin-template": "16.1.0",
        "@angular-eslint/schematics": "16.1.0",
        "@angular-eslint/template-parser": "16.1.0",
        "@angular/cli": "^16.1.8",
        "@angular/compiler-cli": "^16.1.8",
        "@playwright/test": "^1.36.2",
        "@types/big.js": "^6.2.0",
        "@types/jasmine": "~4.3.5",
        "@types/lodash-es": "^4.17.8",
        "@types/node": "^18.0",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "eslint": "^8.46.0",
        "jasmine-core": "~5.1.0",
        "karma": "~6.4.2",
        "karma-chrome-launcher": "~3.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "prettier": "3.2.5",
        "ts-node": "~10.9.1",
        "typescript": "~5.1.6"
    }
}
